<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_client_printer_tree" model="ir.ui.view">
        <field name="name">pos_client_printer.printer.tree</field>
        <field name="model">pos_client_printer.printer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="printer_type"/>
                <field name="ip_address"/>
                <field name="token"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_client_printer_form" model="ir.ui.view">
        <field name="name">pos_client_printer.printer.form</field>
        <field name="model">pos_client_printer.printer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="printer_type"/>
                        <field name="ip_address"/>
                        <field name="pos_config_ids" widget="many2many_tags"/>
                        <field name="token" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_client_printer" model="ir.actions.act_window">
        <field name="name">Impresoras Avanzadas</field>
        <field name="res_model">pos_client_printer.printer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pos_client_printer_root" name="POS Client Printer" parent="point_of_sale.menu_point_root" sequence="60"/>
    <menuitem id="menu_pos_client_printer" name="Impresoras" parent="menu_pos_client_printer_root" action="action_pos_client_printer"/>
</odoo>
