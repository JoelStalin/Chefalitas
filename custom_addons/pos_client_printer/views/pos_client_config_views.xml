<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_client_printer" model="ir.ui.view">
        <field name="name">pos.config.form.client.printer</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='pos_printer_page']" position="after">
                <page string="Impresoras Avanzadas">
                    <group>
                        <field name="pos_client_printer_ids" widget="many2many_tags"/>
                        <button name="action_generate_agent" type="object" string="Generar instalador" class="btn-primary"/>
                        <div>
                            <p>Descargue el agente de impresión para Windows desde aquí:</p>
                            <a t-if="pos_config.pos_client_printer_download_url" t-att-href="pos_config.pos_client_printer_download_url">Descargar agente</a>
                        </div>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
