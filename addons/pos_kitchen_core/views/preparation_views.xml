<odoo>
    <record id="view_rest_preparation_tree" model="ir.ui.view">
        <field name="name">rest.preparation.tree</field>
        <field name="model">rest.preparation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="recipe_id" />
                <field name="date" />
                <field name="prepared_portions" />
                <field name="real_total_weight_g" />
                <field name="variance_pct" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_rest_preparation_form" model="ir.ui.view">
        <field name="name">rest.preparation.form</field>
        <field name="model">rest.preparation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <field name="state" widget="statusbar" />
                    </header>
                    <group>
                        <field name="name" />
                        <field name="recipe_id" />
                        <field name="date" />
                        <field name="user_id" />
                    </group>
                    <group>
                        <field name="prepared_portions" />
                        <field name="real_total_weight_g" />
                        <field name="expected_total_weight_g" readonly="1" />
                        <field name="variance_pct" readonly="1" />
                    </group>
                    <group>
                        <field name="real_total_cost" readonly="1" />
                        <field name="real_cost_per_portion" readonly="1" />
                    </group>
                    <notebook>
                        <page string="Consumption">
                            <field name="line_consumption_ids">
                                <tree editable="bottom">
                                    <field name="ingredient_id" />
                                    <field name="qty_g" />
                                    <field name="cost_value" readonly="1" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rest_preparation" model="ir.actions.act_window">
        <field name="name">Preparations</field>
        <field name="res_model">rest.preparation</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
