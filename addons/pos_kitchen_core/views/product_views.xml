<odoo>
    <record id="view_product_template_form_kitchen" model="ir.ui.view">
        <field name="name">product.template.form.kitchen</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Kitchen">
                    <group>
                        <field name="x_is_ingredient" />
                        <field name="x_yield_factor" attrs="{'invisible': [('x_is_ingredient','=',False)]}" />
                        <field name="x_cost_per_base_uom" readonly="1" />
                        <field name="x_last_cost_update" />
                        <field name="x_cost_variation_pct" readonly="1" />
                        <field name="x_cost_alert_threshold_pct" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
