<odoo>
    <record id="view_recipe_price_simulator_form" model="ir.ui.view">
        <field name="name">recipe.price.simulator.form</field>
        <field name="model">recipe.price.simulator</field>
        <field name="arch" type="xml">
            <form string="Price Simulator">
                <group>
                    <field name="recipe_id" />
                    <field name="target_margin_pct" />
                    <field name="sale_price" />
                </group>
                <group>
                    <field name="resulting_margin_pct" readonly="1" />
                    <field name="suggested_price" readonly="1" />
                    <field name="impact_note" readonly="1" />
                </group>
                <footer>
                    <button string="Close" class="btn-primary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
