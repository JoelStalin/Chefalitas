<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_build_agent_wizard_form" model="ir.ui.view">
        <field name="name">build.agent.wizard.form</field>
        <field name="model">build.agent.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Agent Installer">
                <group>
                    <field name="device_id" readonly="1"/>
                    <field name="installer_file" filename="installer_filename"/>
                    <field name="installer_filename" invisible="1"/>
                </group>
                <footer>
                    <button name="action_upload_installer" string="Upload" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_build_agent_wizard" model="ir.actions.act_window">
        <field name="name">Upload Agent Installer</field>
        <field name="res_model">build.agent.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
