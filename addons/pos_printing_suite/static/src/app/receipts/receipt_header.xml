<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension">
        <xpath expr="//img[@class='pos-receipt-logo']" position="replace">
            <t t-if="props.data.receipt_image">
                <img t-att-src="props.data.receipt_image" alt="Logo" class="pos-receipt-logo"/>
            </t>
            <t t-else="">
                <img t-attf-src="/web/image?model=res.company&amp;id={{props.data.company.id}}&amp;field=logo" alt="Logo" class="pos-receipt-logo"/>
            </t>
        </xpath>
    </t>
</templates>
