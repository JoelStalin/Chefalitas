<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="point_of_sale.OrderChangeReceipt" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'receipt-header')]" position="inside">
            <t t-if="changes.receipt_image">
                <div class="text-center">
                    <img t-att-src="changes.receipt_image" alt="Logo" class="pos-receipt-logo"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
