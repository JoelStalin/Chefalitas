<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_pos_printing_suite" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.pos.printing.suite</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_connected_devices_section']" position="inside">
                <setting id="pos_printing_suite_mode"
                         string="Printing Suite"
                         help="Configure cashier/kitchen printers and choose the Printing Suite mode.">
                    <field name="printing_mode"/>
                    <div class="content-group mt16">
                        <div class="row">
                            <div class="col-12 col-lg-6">
                                <field name="local_printer_cashier_name" placeholder="e.g. EPSON TM-T20II"
                                       invisible="printing_mode == 'odoo_default'"/>
                            </div>
                            <div class="col-12 col-lg-6">
                                <field name="local_printer_kitchen_name" placeholder="e.g. Kitchen Receipt"
                                       invisible="printing_mode == 'odoo_default'"/>
                            </div>
                        </div>
                    </div>
                </setting>
                <setting id="pos_printing_suite_agent"
                         string="Local Agent Connection"
                         help="Local Agent (Windows) connection for the Printing Suite.">
                    <div class="content-group mt16">
                        <div class="row">
                            <div class="col-12 col-lg-6">
                                <field name="local_agent_host" placeholder="127.0.0.1"
                                       invisible="printing_mode != 'local_agent'"/>
                            </div>
                            <div class="col-12 col-lg-6">
                                <field name="local_agent_port" placeholder="9060"
                                       invisible="printing_mode != 'local_agent'"/>
                            </div>
                        </div>
                    </div>
                </setting>
                <setting id="pos_printing_suite_hwproxy"
                         string="HW Proxy Connection"
                         help="HW Proxy / Any Printer connection for the Printing Suite.">
                    <div class="content-group mt16">
                        <div class="row">
                            <div class="col-12 col-lg-6">
                                <field name="any_printer_ip" placeholder="127.0.0.1"
                                       invisible="printing_mode != 'hw_proxy'"/>
                            </div>
                            <div class="col-12 col-lg-6">
                                <field name="any_printer_port" placeholder="8069"
                                       invisible="printing_mode != 'hw_proxy'"/>
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
