<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_printing_suite_agent_install_wizard" model="ir.ui.view">
        <field name="name">pos.printing.suite.agent.install.wizard</field>
        <field name="model">pos.printing.suite.agent.install.wizard</field>
        <field name="arch" type="xml">
            <form string="Install Windows Agent">
                <sheet>
                    <group>
                        <field name="pos_config_id" readonly="1"/>
                        <field name="instructions" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_download" type="object" string="Download Installer" class="btn-primary"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
