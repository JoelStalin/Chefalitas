<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_config_form_printing_suite" model="ir.ui.view">
        <field name="name">pos.config.form.printing.suite</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <group string="POS Printing Suite">
                    <field name="printing_mode"/>
                    <field name="local_printer_cashier_name" placeholder="e.g. EPSON TM-T20II"
                           invisible="printing_mode == 'odoo_default'"/>
                    <field name="local_printer_kitchen_name" placeholder="e.g. Kitchen Receipt"
                           invisible="printing_mode == 'odoo_default'"/>
                    <field name="local_agent_host" placeholder="127.0.0.1"
                           invisible="printing_mode != 'local_agent'"/>
                    <field name="local_agent_port" placeholder="9060"
                           invisible="printing_mode != 'local_agent'"/>
                    <field name="any_printer_ip" placeholder="127.0.0.1"
                           invisible="printing_mode != 'hw_proxy'"/>
                    <field name="any_printer_port" placeholder="8069"
                           invisible="printing_mode != 'hw_proxy'"/>
                </group>
                <group string="Windows Agent" groups="base.group_system">
                    <field name="agent_enabled"/>
                    <field name="agent_status" readonly="1"/>
                    <field name="agent_last_seen" readonly="1"/>
                    <field name="agent_version" readonly="1"/>
                    <field name="agent_download_url" readonly="1"/>
                    <field name="agent_token" password="True" readonly="1"/>
                    <button name="action_regenerate_agent_token" type="object"
                            string="Regenerate Token" class="btn-secondary"/>
                    <button name="action_build_agent_installer" type="object"
                            string="Crear instalable del agente" class="btn-primary"/>
                    <button name="action_open_agent_install_wizard" type="object"
                            string="Descargar e instalar agente" class="btn-secondary"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
