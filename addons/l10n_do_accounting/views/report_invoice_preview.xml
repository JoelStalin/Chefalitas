<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Template for Company and Receiver Information -->
    <template id="report_invoice_document_preview_inherited"
              inherit_id="account.report_invoice_document_preview"
              name="Invoice Document Preview (DO Custom)"
              primary="True"> 

        <div id="informations" class="row mt-4 mb-4">
            <!-- Company Information (Left Column) -->
            <div class="col-6">
                <strong t-field="o.company_id.partner_id.name"/>
                <br/>
                <span t-field="o.company_id.partner_id"
                      class="text-muted"
                      t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                <br/>
                <strong>RNC:</strong>
                <span t-if="o.company_id.vat" t-field="o.company_id.vat"/>
                <br/>
                <strong>Emission Date:</strong>
                <span t-field="o.invoice_date" t-options='{"format": "dd/MM/yyyy"}'/>
                <br/>
                <t t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'">
                    <strong>Due Date:</strong>
                    <span t-field="o.invoice_date_due" t-options='{"format": "dd/MM/yyyy"}'/>
                </t>
            </div>
            <!-- Document Information (Right Column) -->
            <div class="col-6 text-end">
                <t t-if="o.l10n_latam_document_type_id">
                    <h2 t-field="o.l10n_latam_document_type_id.report_name"/>
                </t>
                <strong>NCF:</strong>
                <span t-field="o.l10n_do_fiscal_number"/>
                <br/>
                <t t-if="o.l10n_do_ncf_expiration_date">
                    <strong>Valid Until:</strong>
                    <span t-field="o.l10n_do_ncf_expiration_date" t-options='{"format": "dd/MM/yyyy"}'/>
                </t>
            </div>
        </div>
        <!-- Receiver Information -->
        <div id="receiver_info" class="row mt-4 mb-4">
            <t t-set="vat_len" t-value="len(o.commercial_partner_id.vat or '')"/>
            <div class="col-7">
                <strong>
                    <t t-if="vat_len == 9">RNC:</t>
                    <t t-elif="vat_len == 11">CÃ©dula:</t>
                    <t t-else="">Customer ID:</t>
                </strong>
                <span t-field="o.commercial_partner_id.vat"/>
                <br/>
                <strong>
                    <t t-if="vat_len == 9">Business Name:</t>
                    <t t-else="">Name:</t>
                </strong>
                <span t-field="o.commercial_partner_id.name"/>
                <br/>
                <span t-if="o.partner_id.street"
                      t-field="o.partner_id"
                      t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
            </div>
        </div>
    </template>

    <!-- Template for Tax Totals -->
    <template id="invoice_tax_totals" name="Invoice Tax Totals">
        <t t-if="o._name == 'account.move'">
            <t t-set="l10n_do_amounts" t-value="o._get_l10n_do_amounts() or {}"/>
            <table class="table table-sm table-borderless">
                <!-- Subtotal -->
                <tr>
                    <td>Subtotal</td>
                    <td class="text-end">
                        <span t-field="o.amount_untaxed"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
                <!-- Tax (ITBIS) -->
                <tr>
                    <td>ITBIS</td>
                    <td class="text-end">
                        <span t-field="o.amount_tax_signed"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
                <!-- Total -->
                <tr class="border-top">
                    <td><strong>Total</strong></td>
                    <td class="text-end">
                        <strong>
                            <span t-field="o.amount_total"
                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </strong>
                    </td>
                </tr>
            </table>
        </t>
    </template>

    <!-- Main Invoice Report Template -->
    <template id="report_invoice_document_custom" inherit_id="account.report_invoice_document" primary="True">
        <xpath expr="//div[contains(@class, 'invoice_main')]" position="replace">
            <div class="clearfix invoice_main">
                <div class="page">
                    <t t-call="web.external_layout">
                        <t t-set="o" t-value="o.with_context(lang=lang)"/>
                        <t t-set="is_l10n_do_invoice" t-value="o.l10n_latam_use_documents and o.company_id.country_id.code == 'DO'"/>

                        <!-- Header and Receiver Info -->
                        <t t-call="module_name.invoice_informations"/>

                        <!-- Invoice Lines Table -->
                        <table class="table table-striped table-sm" name="invoice_line_table">
                            <thead>
                                <tr>
                                    <th class="text-start">Description</th>
                                    <th class="text-end">Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Taxes</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.invoice_line_ids.filtered(lambda l: l.display_type == 'product')" t-as="line">
                                    <tr>
                                        <td><span t-field="line.name" t-options='{"widget": "text"}'/></td>
                                        <td class="text-end"><span t-field="line.quantity"/></td>
                                        <td class="text-end">
                                            <span t-field="line.price_unit"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td class="text-end">
                                            <span t-out="', '.join([tax.name for tax in line.tax_ids]) or 'N/A'"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_subtotal"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- Totals Section -->
                        <div class="row justify-content-end">
                            <div class="col-4">
                                <t t-call="module_name.invoice_tax_totals"/>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </xpath>
    </template>



    <!-- Report Definition -->
    <record id="action_report_invoice_custom" model="ir.actions.report">
        <field name="name">Custom Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_do_accounting.report_invoice_document_custom</field>
        <field name="print_report_name">'Invoice - %s' % (object.name)</field>
    </record>
</odoo>