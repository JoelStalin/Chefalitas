<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">account.journal.form.inherit.do</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="l10n_latam_invoice_document.view_account_journal_form"/>
        <field name="arch" type="xml">

            <!-- Campo "Forma de pago" para diarios de tipo banco/efectivo en RD -->
            <xpath expr="//field[@name='type']" position="after">
                <field name="l10n_do_payment_form"
                       invisible="type not in ('cash','bank') or country_code!= 'DO'"
                       required="type in ('cash','bank') and country_code == 'DO'"/>
            </xpath>

            <!-- Tipos de documentos fiscales para RD -->
            <xpath expr="//page[@name='bank_account']/group" position="inside">
                <group name="document_types" string="Tipos de Comprobantes Fiscales"
                    invisible="not l10n_latam_use_documents or country_code != 'DO'">
                    <field name="l10n_do_document_type_ids" nolabel="1" colspan="2">
                        <list create="false" delete="false" editable="top"
                              default_order="l10n_latam_document_type_id">
                            <field name="l10n_latam_document_type_id"/>
                            <field name="l10n_do_ncf_expiration_date"/>
                        </list>
                    </field>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
