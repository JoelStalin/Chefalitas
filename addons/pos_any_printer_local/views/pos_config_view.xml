<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Ajustes globales (valores por defecto para nuevos TPV) -->
    <record id="pos_res_config_settings_view_form_inherit_local_printer" model="ir.ui.view">
      <field name="name">pos.res.config.settings.inherit.local.printer</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//setting[@id='other_devices']" position="inside">
          <setting id="pos_any_printer_local_setting"
                   string="Impresión local (Agente Windows)"
                   help="Imprime desde el POS hacia impresoras de Windows mediante el agente local (HTTP/HTTPS).">
            <div class="content-group">
              <field name="pos_enable_local_printing"/>
              <field name="pos_agent_url" placeholder="http://127.0.0.1:9060"/>
              <field name="pos_local_cashier_printer_name" placeholder="Caja: Epson TM-T20III"/>
              <field name="pos_local_kitchen_printer_name" placeholder="Cocina: HP LaserJet"/>
            </div>
          </setting>
        </xpath>
      </field>
    </record>

    <!-- Configuración por TPV -->
    <record id="pos_config_view_form_inherit_local_printer" model="ir.ui.view">
      <field name="name">pos.config.form.inherit.local.printer</field>
      <field name="model">pos.config</field>
      <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="after">
          <group string="Impresión local (Agente Windows)">
            <field name="enable_local_printing"/>
            <field name="agent_url" placeholder="http://127.0.0.1:9060"/>
            <field name="local_cashier_printer_name" placeholder="Caja: Epson TM-T20III"/>
            <field name="local_kitchen_printer_name" placeholder="Cocina: HP LaserJet"/>
          </group>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
