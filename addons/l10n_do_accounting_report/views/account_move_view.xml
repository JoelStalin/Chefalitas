<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- 607: Customer Invoices Form View -->
    <record id="invoice_form_inherited" model="ir.ui.view">
        <field name="name">invoice.form.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add DGII page for customer invoices after Other Info -->
            <xpath expr="//notebook/page[@name='other_info']" position="after">
                <page name="dgii_fields" string="DGII" groups="account.group_account_user" invisible="move_type in ['in_invoice', 'in_refund']">
                    <group>
                        <group col="3" string="Withholding" groups="account.group_account_manager">
                            <field name="payment_date" string="Withholding Date" readonly="state != 'draft'"/>
                            <field name="third_withheld_itbis" string="Withheld ITBIS by a Third" readonly="state != 'draft'"/>
                            <field name="third_income_withholding" string="Income Withholding by a Third" readonly="state != 'draft'"/>
                        </group>
                        <group col="3" string="Taxes" groups="account.group_account_manager">
                            <field name="invoiced_itbis" string="Invoiced ITBIS" readonly="state != 'draft'"/>
                            <field name="selective_tax" string="Selective Tax" readonly="state != 'draft'"/>
                            <field name="other_taxes" string="Other Taxes" readonly="state != 'draft'"/>
                            <field name="legal_tip" string="Legal Tip Amount" readonly="state != 'draft'"/>
                        </group>
                        <group col="3" string="607">
                            <field name="fiscal_status" widget="state_selection" readonly="1"/>
                            <field name="invoiced_itbis" string="Invoiced ITBIS" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- 607: Customer Invoices Tree View -->
    <record id="invoice_tree_inherited" model="ir.ui.view">
        <field name="name">invoice.tree.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <!-- Add fiscal_status after invoice_date in customer invoices tree -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="fiscal_status" widget="state_selection" readonly="1" groups="account.group_account_user"/>
            </xpath>
        </field>
    </record>

    <!-- 606: Vendor Bills Form View -->
    <record id="invoice_supplier_form_inherited" model="ir.ui.view">
        <field name="name">invoice.supplier.form.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add exterior-related fields before ref for vendor bills -->
            <xpath expr="//group[@id='header_left_group']/field[@name='ref']" position="before">
                <field name="is_exterior" invisible="1"/>
                <field name="service_type" invisible="not is_exterior" required="is_exterior" readonly="state != 'draft'"/>
                <field name="service_type_detail" options="{'no_create': True, 'no_open': True}" invisible="not is_exterior" readonly="not service_type or state != 'draft'" required="service_type"/>
            </xpath>
            <!-- Add DGII page for vendor bills after Other Info -->
            <xpath expr="//notebook/page[@name='other_info']" position="after">
                <page name="dgii_fields" string="DGII" groups="account.group_account_user" invisible="move_type in ['out_invoice', 'out_refund']">
                    <group>
                        <group col="3" string="Taxes" groups="account.group_account_manager">
                            <field name="invoiced_itbis" string="Invoiced ITBIS" readonly="state != 'draft'"/>
                            <field name="proportionality_tax" string="Proportionality Tax" readonly="state != 'draft'"/>
                            <field name="cost_itbis" string="Cost ITBIS" readonly="state != 'draft'"/>
                            <field name="advance_itbis" string="Advanced ITBIS" readonly="state != 'draft'"/>
                            <field name="selective_tax" string="Selective Tax" readonly="state != 'draft'"/>
                            <field name="other_taxes" string="Other Taxes" readonly="state != 'draft'"/>
                            <field name="legal_tip" string="Legal Tip Amount" readonly="state != 'draft'"/>
                        </group>
                        <group col="3" string="Invoicing" groups="account.group_account_manager">
                            <field name="payment_date" string="Payment Date" readonly="state != 'draft'"/>
                            <field name="payment_form" string="Payment Form" readonly="state != 'draft'"/>
                            <field name="service_total_amount" string="Service Total Amount" readonly="state != 'draft'"/>
                            <field name="good_total_amount" string="Good Total Amount" readonly="state != 'draft'"/>
                        </group>
                        <group col="3" string="Withholding" groups="account.group_account_manager">
                            <field name="withholded_itbis" string="Withheld ITBIS" readonly="state != 'draft'"/>
                            <field name="isr_withholding_type" string="ISR Withholding Type" readonly="state != 'draft'"/>
                            <field name="income_withholding" string="Income Withholding" readonly="state != 'draft'"/>
                        </group>
                        <group col="3" string="606">
                            <field name="fiscal_status" widget="state_selection" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- 606: Vendor Bills Tree View -->
    <record id="invoice_supplier_tree_inherited" model="ir.ui.view">
        <field name="name">invoice.supplier.tree.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="arch" type="xml">
            <!-- Add fiscal_status after invoice_date in vendor bills tree -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="fiscal_status" widget="state_selection" readonly="1" groups="account.group_account_user"/>
            </xpath>
        </field>
    </record>
</odoo>