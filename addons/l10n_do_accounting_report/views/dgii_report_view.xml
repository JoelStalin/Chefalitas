<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="dgii_report_form_view" model="ir.ui.view">
        <field name="name">dgii.reports.form.view</field>
        <field name="model">dgii.reports</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="generate_report" string="Generate Statements" type="object"
                        class="btn-primary" invisible="state != 'draft'" />
                    <button name="generate_report" string="Generate Statements" type="object"
                        class="btn-secondary" invisible="state != 'generated'" />
                    <button name="state_sent" string="Set as sent" type="object" class="btn-primary"
                        invisible="state != 'generated'" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,sent" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <div class="oe_title">
                                <h1>
                                    <field name="company_id" readonly="1" />
                                </h1>
                            </div>
                        </group>
                        <field name="previous_report_pending" invisible="1" />
                        <group invisible="not previous_report_pending">
                            <div class="alert alert-warning info_icon" role="alert">
                                <span class="fa fa-lightbulb-o fa-lg mr-2" title="Info"
                                    aria-label="Info" />
                                <div>
                                    <p>The previous report is still not marked as sent.</p>
                                    <p>Not setting a report as sent may throw inconsistencies
                                        regarding invoices withholding dates.
                                    </p>
                                </div>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page name="statements" string="Statements">
                            <group>
                                <group>
                                    <field name="name" placeholder="MM/YYYY"
                                        readonly="state != 'draft'" />
                                    <field name="previous_balance" readonly="1" />
                                </group>
                            </group>

                            <div class="row">
                                <div class="col-lg-3 col-md-6">
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between align-items-baseline mb-2">
                                            <h5 class="mb-0 flex-grow-1">Format 606</h5>
                                            <button name="get_606_tree_view" type="object"
                                                class="btn btn-sm btn-outline-secondary ms-2 flex-shrink-0"
                                                title="View 606 Details" aria-label="View 606 Details">
                                                <span class="fa fa-list-ul" />
                                            </button>
                                        </div>
                                        <group col="2">
                                            <field name="purchase_records" readonly="1" />
                                            <field name="purchase_invoiced_amount" readonly="1" />
                                            <field name="service_total_amount" readonly="1" />
                                            <field name="good_total_amount" readonly="1" />
                                            <separator colspan="2" />
                                            <field name="purchase_invoiced_itbis" readonly="1" />
                                            <field name="purchase_withholded_itbis" readonly="1" />
                                            <field name="cost_itbis" readonly="1" />
                                            <field name="advance_itbis" readonly="1" />
                                            <separator colspan="2" />
                                            <field name="income_withholding" readonly="1" />
                                            <separator colspan="2" />
                                            <field name="purchase_selective_tax" readonly="1" />
                                            <field name="purchase_other_taxes" readonly="1" />
                                            <field name="purchase_legal_tip" readonly="1" />
                                        </group>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between align-items-baseline mb-2">
                                            <h5 class="mb-0 flex-grow-1">Format 607</h5>
                                            <button name="get_607_list_view" type="object"
                                                class="btn btn-sm btn-outline-secondary ms-2 flex-shrink-0"
                                                title="View 607 Details" aria-label="View 607 Details">
                                                <span class="fa fa-list-ul" />
                                            </button>
                                        </div>
                                        <group col="2">
                                            <field name="sale_records" readonly="1" />
                                            <field name="sale_invoiced_amount" readonly="1" />
                                            <separator colspan="2" />
                                            <field name="sale_invoiced_itbis" readonly="1" />
                                            <field name="sale_withholded_itbis" readonly="1" />
                                            <separator colspan="2" />
                                            <field name="sale_withholded_isr" readonly="1" />
                                            <separator colspan="2" />
                                            <field name="sale_selective_tax" readonly="1" />
                                            <field name="sale_other_taxes" readonly="1" />
                                            <field name="sale_legal_tip" readonly="1" />
                                        </group>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between align-items-baseline mb-2">
                                            <h5 class="mb-0 flex-grow-1">Format 608</h5>
                                            <button name="get_608_list_view" type="object"
                                                class="btn btn-sm btn-outline-secondary ms-2 flex-shrink-0"
                                                title="View 608 Details" aria-label="View 608 Details">
                                                <span class="fa fa-list-ul" />
                                            </button>
                                        </div>
                                        <group col="2">
                                            <field name="cancel_records" readonly="1" />
                                        </group>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between align-items-baseline mb-2">
                                            <h5 class="mb-0 flex-grow-1">Format 609</h5>
                                            <button name="get_609_tree_view" type="object"
                                                class="btn btn-sm btn-outline-secondary ms-2 flex-shrink-0"
                                                title="View 609 Details" aria-label="View 609 Details">
                                                <span class="fa fa-list-ul" />
                                            </button>
                                        </div>
                                        <group col="2">
                                            <field name="exterior_records" readonly="1" />
                                            <field name="exterior_invoiced_amount" readonly="1" />
                                            <separator colspan="2" />
                                            <field name="presumed_income" readonly="1" />
                                            <field name="exterior_withholded_isr" readonly="1" />
                                        </group>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page name="files" string="TXT Files">
                            <group>
                                <group>
                                    <field name="purchase_binary" filename="purchase_filename"
                                        readonly="1" />
                                    <field name="purchase_filename" invisible="1" />
                                    <field name="sale_binary" filename="sale_filename" readonly="1" />
                                    <field name="sale_filename" invisible="1" />
                                    <field name="cancel_binary" filename="cancel_filename"
                                        readonly="1" />
                                    <field name="cancel_filename" invisible="1" />
                                    <field name="exterior_binary" filename="exterior_filename"
                                        readonly="1" />
                                    <field name="exterior_filename" invisible="1" />
                                </group>
                            </group>
                        </page>
                        <page name="it1" string="IT-1">
                            <group string="607 Reported Operations by NCF Type">
                                <field name="ncf_sale_summary_ids" nolabel="1" widget="one2many"
                                    readonly="1">
                                    <list create="false" edit="false">
                                        <field name="sequence" invisible="1" />
                                        <field name="name" />
                                        <field name="qty" />
                                        <field name="amount" sum="Operations Total" />
                                        <field name="currency_id" invisible="1" />
                                        <field name="dgii_report_id" invisible="1" />
                                    </list>
                                </field>
                            </group>
                            <group>
                                <group col="3" string="Operations by Sale Type">
                                    <field name="cash" readonly="1" />
                                    <field name="bank" readonly="1" />
                                    <field name="card" readonly="1" />
                                    <field name="credit" readonly="1" />
                                    <field name="bond" readonly="1" />
                                    <field name="swap" readonly="1" />
                                    <field name="others" readonly="1" />
                                    <field name="sale_type_total" readonly="1" />
                                </group>
                                <group col="3" string="Operations by Income Type">
                                    <field name="opr_income" readonly="1" />
                                    <field name="fin_income" readonly="1" />
                                    <field name="ext_income" readonly="1" />
                                    <field name="lea_income" readonly="1" />
                                    <field name="ast_income" readonly="1" />
                                    <field name="otr_income" readonly="1" />
                                    <field name="income_type_total" readonly="1" />
                                </group>
                            </group>
                        </page>
                        <page name="consumer" string="Consumer Invoices Summary">
                            <group string="General Summary of Consumer Invoices">
                                <group col="3">
                                    <field name="csmr_ncf_qty" readonly="1" />
                                    <field name="csmr_ncf_total_amount" readonly="1" />
                                    <field name="csmr_ncf_total_itbis" readonly="1" />
                                    <field name="csmr_ncf_total_isc" readonly="1" />
                                    <field name="csmr_ncf_total_othr" readonly="1" />
                                    <field name="csmr_ncf_total_lgl_tip" readonly="1" />
                                </group>
                                <group col="3">
                                    <field name="csmr_cash" readonly="1" />
                                    <field name="csmr_bank" readonly="1" />
                                    <field name="csmr_card" readonly="1" />
                                    <field name="csmr_credit" readonly="1" />
                                    <field name="csmr_bond" readonly="1" />
                                    <field name="csmr_swap" readonly="1" />
                                    <field name="csmr_others" readonly="1" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="message_ids" />
                </div> -->
            </form>
        </field>
    </record>

    <record id="dgii_report_tree_view" model="ir.ui.view">
        <field name="name">dgii.reports.list.view</field>
        <field name="model">dgii.reports</field>
        <field name="arch" type="xml">
            <list string="Statements">
                <field name="name" />
                <field name="state" />
                <field name="create_date" optional="show" />
                <field name="create_uid" optional="show" />
                <field name="write_date" optional="hide" />
                <field name="write_uid" optional="hide" />
            </list>
        </field>
    </record>

    <record id="dgii_report_search_view" model="ir.ui.view">
        <field name="name">dgii.reports.search.view</field>
        <field name="model">dgii.reports</field>
        <field name="arch" type="xml">
            <search string="Statements">
                <field name="name" />
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]" />
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]" />
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="dgii_report_action" model="ir.actions.act_window">
        <field name="name">Reports</field>
        <field name="res_model">dgii.reports</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="dgii_report_search_view" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your DGII Tax Statements.
            </p>
            <p>This is where you can manage and generate all necessary tax statements for DGII
                compliance.</p>
        </field>
    </record>

    <menuitem id="marcos_account_dgii_menu" name="DGII" parent="account.menu_finance_reports"
        sequence="5" groups="account.group_account_user" />

    <menuitem id="dgii_report_menu" parent="marcos_account_dgii_menu" action="dgii_report_action"
        sequence="5" />

    <record id="dgii_report_purchase_line_tree" model="ir.ui.view">
        <field name="name">dgii.reports.purchase.line.tree</field>
        <field name="model">dgii.reports.purchase.line</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false" import="false">
                <field name="dgii_report_id" invisible="1" />
                <field name="line" />
                <field name="rnc_cedula" widget="dgii_reports_url" readonly="1"
                    options="{'is_rnc': true}" />
                <field name="invoice_partner_id" />
                <field name="identification_type" />
                <field name="expense_type" />
                <field name="invoice_id" invisible="1" />
                <field name="fiscal_invoice_number" widget="dgii_reports_url" readonly="1" />
                <field name="modified_invoice_number" widget="dgii_reports_url" readonly="1"
                    options="{'is_modify': true}" />
                <field name="invoice_date" />
                <field name="payment_date" optional="hide" />
                <field name="service_total_amount" sum="Total" />
                <field name="good_total_amount" sum="Total" />
                <field name="invoiced_amount" sum="Total" />
                <field name="invoiced_itbis" sum="Total" />
                <field name="withholded_itbis" sum="Total" optional="show" />
                <field name="proportionality_tax" sum="Total" optional="hide" />
                <field name="cost_itbis" sum="Total" optional="show" />
                <field name="advance_itbis" sum="Total" optional="show" />
                <field name="purchase_perceived_itbis" sum="Total" optional="hide" />
                <field name="isr_withholding_type" optional="show" />
                <field name="income_withholding" sum="Total" optional="show" />
                <field name="purchase_perceived_isr" sum="Total" optional="hide" />
                <field name="selective_tax" sum="Total" optional="hide" />
                <field name="other_taxes" sum="Total" optional="hide" />
                <field name="legal_tip" sum="Total" optional="hide" />
                <field name="payment_type" optional="hide" />
            </list>
        </field>
    </record>

    <record id="dgii_report_sale_line_tree" model="ir.ui.view">
        <field name="name">dgii.reports.sale.line.list</field>
        <field name="model">dgii.reports.sale.line</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false" import="false"
                decoration-muted="(invoiced_amount &lt; 250000) and (identification_type == '2')">
                <field name="dgii_report_id" invisible="1" />
                <field name="line" />
                <field name="rnc_cedula" widget="dgii_reports_url" readonly="1"
                    options="{'is_rnc': true}" />
                <field name="invoice_partner_id" />
                <field name="identification_type" />
                <field name="invoice_id" invisible="1" />
                <field name="fiscal_invoice_number" widget="dgii_reports_url" readonly="1" />
                <field name="modified_invoice_number" widget="dgii_reports_url" readonly="1"
                    options="{'is_modify': true}" />
                <field name="income_type" />
                <field name="invoice_date" />
                <field name="withholding_date" optional="hide" />
                <field name="invoiced_amount" sum="Total" />
                <field name="invoiced_itbis" sum="Total" />
                <field name="third_withheld_itbis" sum="Total" optional="show" />
                <field name="perceived_itbis" sum="Total" optional="hide" />
                <field name="third_income_withholding" sum="Total" optional="show" />
                <field name="perceived_isr" sum="Total" optional="hide" />
                <field name="selective_tax" sum="Total" optional="hide" />
                <field name="other_taxes" sum="Total" optional="hide" />
                <field name="legal_tip" sum="Total" optional="hide" />
                <field name="cash" sum="Total" optional="hide" />
                <field name="bank" sum="Total" optional="hide" />
                <field name="card" sum="Total" optional="hide" />
                <field name="credit" sum="Total" optional="hide" />
                <field name="bond" sum="Total" optional="hide" />
                <field name="swap" sum="Total" optional="hide" />
                <field name="others" sum="Total" optional="hide" />
            </list>
        </field>
    </record>
    <record id="dgii_cancel_report_line_tree" model="ir.ui.view">
        <field name="name">dgii.reports.cancel.line.tree</field>
        <field name="model">dgii.reports.cancel.line</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false" import="false">
                <field name="dgii_report_id" invisible="1" />
                <field name="line" />
                <field name="invoice_partner_id" />
                <field name="invoice_id" invisible="1" />
                <field name="fiscal_invoice_number" widget="dgii_reports_url" readonly="1" />
                <field name="invoice_date" />
                <field name="anulation_type" />
            </list>
        </field>
    </record>

    <record id="dgii_exterior_report_line_tree" model="ir.ui.view">
        <field name="name">dgii.exterior.cancel.line.tree</field>
        <field name="model">dgii.reports.exterior.line</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false" import="false">
                <field name="dgii_report_id" invisible="1" />
                <field name="line" />
                <field name="legal_name" />
                <field name="tax_id_type" />
                <field name="partner_id" invisible="1" />
                <field name="tax_id" widget="dgii_reports_url" readonly="1"
                    options="{'is_rnc': true}" />
                <field name="country_code" />
                <field name="purchased_service_type" />
                <field name="service_type_detail" optional="hide" />
                <field name="related_part" optional="hide" />
                <field name="invoice_id" invisible="1" />
                <field name="doc_number" widget="dgii_reports_url" />
                <field name="doc_date" />
                <field name="invoiced_amount" sum="Total" />
                <field name="isr_withholding_date" sum="Total" optional="show" />
                <field name="presumed_income" sum="Total" optional="show" />
                <field name="withholded_isr" sum="Total" />
            </list>
        </field>
    </record>


    <record id="dgii_report_purchase_line_search" model="ir.ui.view">
        <field name="name">dgii.report.purchase.line.search</field>
        <field name="model">dgii.reports.purchase.line</field>
        <field name="arch" type="xml">
            <search string="Search Purchase Line">
                <field name="invoice_partner_id" />
                <field name="rnc_cedula" />
                <field name="fiscal_invoice_number" />
                <field name="modified_invoice_number" />
                <filter string="Physical Person" name="identification_type_physical"
                    domain="[('identification_type','=', '2')]" />
                <filter string="Legal Person" name="identification_type_legal"
                    domain="[('identification_type','=', '1')]" />
                <separator />
                <filter string="Paid" name="paid" domain="[('invoice_id.state','=','paid')]" />
                <filter string="Open" name="open" domain="[('invoice_id.state','!=','paid')]" />
                <filter string="ITBIS Withholding" name="itbis_withholding"
                    domain="[('withholded_itbis', '!=', 0)]" />
                <filter string="ISR Withholding" name="isr_withholding"
                    domain="[('income_withholding', '!=', 0)]" />
                <group expand="0" string="Group By">
                    <filter string="Contact" name="group_by_invoice_partner_id"
                        context="{'group_by':'invoice_partner_id'}" />
                    <filter string="Identification Type" name="group_by_identification_type"
                        context="{'group_by':'identification_type'}" />
                    <filter string="Expense Type" name="group_by_expense_type"
                        context="{'group_by':'expense_type'}" />
                    <filter string="Withholding Type" name="group_by_isr_withholding_type"
                        context="{'group_by':'isr_withholding_type'}" />
                    <filter string="Payment Type" name="group_by_payment_type"
                        context="{'group_by':'payment_type'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="dgii_report_sale_line_search" model="ir.ui.view">
        <field name="name">dgii.report.sale.line.search</field>
        <field name="model">dgii.reports.sale.line</field>
        <field name="arch" type="xml">
            <search string="Search Sale Line">
                <field name="invoice_partner_id" />
                <field name="rnc_cedula" />
                <field name="fiscal_invoice_number" />
                <field name="modified_invoice_number" />
                <filter string="Physical Person" name="identification_type_physical"
                    domain="[('identification_type','=', '2')]" />
                <filter string="Legal Person" name="identification_type_legal"
                    domain="[('identification_type','=', '1')]" />
                <separator />
                <filter string="Paid" name="paid" domain="[('invoice_id.state','=','paid')]" />
                <filter string="Open" name="open" domain="[('invoice_id.state','!=','paid')]" />
                <filter string="ITBIS Withholding" name="itbis_withholding"
                    domain="[('third_withheld_itbis', '!=', 0)]" />
                <filter string="ISR Withholding" name="isr_withholding"
                    domain="[('third_income_withholding', '!=', 0)]" />
                <group expand="0" string="Group By">
                    <filter string="Contact" name="group_by_invoice_partner_id"
                        context="{'group_by':'invoice_partner_id'}" />
                    <filter string="Identification Type" name="group_by_identification_type"
                        context="{'group_by':'identification_type'}" />
                    <filter string="Income Type" name="group_by_income_type"
                        context="{'group_by':'income_type'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="dgii_report_cancel_line_search" model="ir.ui.view">
        <field name="name">dgii.report.cancel.line.search</field>
        <field name="model">dgii.reports.cancel.line</field>
        <field name="arch" type="xml">
            <search string="Search Cancel Line">
                <field name="invoice_partner_id" />
                <field name="fiscal_invoice_number" />
                <group expand="0" string="Group By">
                    <filter string="Contact" name="group_by_invoice_partner_id"
                        context="{'group_by':'invoice_partner_id'}" />
                    <filter string="Annulment Type" name="group_by_anulation_type"
                        context="{'group_by':'anulation_type'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="dgii_report_exterior_line_search" model="ir.ui.view">
        <field name="name">dgii.report.exterior.line.search</field>
        <field name="model">dgii.reports.exterior.line</field>
        <field name="arch" type="xml">
            <search string="Search Exterior Line">
                <field name="legal_name" />
                <field name="tax_id" />
                <field name="doc_number" />
                <filter string="Paid" name="paid" domain="[('invoice_id.state','=','paid')]" />
                <filter string="Open" name="open" domain="[('invoice_id.state','!=','paid')]" />
                <filter string="Withholded ISR" name="withholded_isr_filter"
                    domain="[('withholded_isr', '!=', 0)]" />
            </search>
        </field>
    </record>

</odoo>